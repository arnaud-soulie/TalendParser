<Screen>:
        
        orientation: 'vertical'
        
        Label: 
                text: "Talend Extract Generator"
                size_hint_y: .1
        GridLayout:
                cols: 2
                size_hint_y: .20
                Label:
                        text: 'Talend project root path:'
                        size_hint_x: .5
                TextInput:
                        text: 'D:\Programmation\Preci\sari_lot1-v2.0'
                        id: talend_path
                Label:
                        text: 'Report directory:'
                        size_hint_x: .5
                TextInput:
                        text: 'D:\\'
                        id: report_path
        Button:
                text: 'Generate'
                size_hint_y: .2
                on_press: root._generate(talend_path.text)
                id: generate_button
        TextInput:
                readonly: True
                text: root.line
        Button:
                text: 'Open Report'
                disabled: True
                size_hint_y: .2
                on_press: root._open_report()
                id: open_button

