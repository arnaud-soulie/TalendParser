<Screen>:
        # canvas.before:
        #         Color:
        #                 rgba: 0.004, 0.831, 0.655, 1
        #         Rectangle:
        #                 # self here refers to the widget i.e FloatLayout
        #                 pos: self.pos
        #                 size: self.size
        orientation: 'vertical'

        # Label:
        #         text: "Talend Extract Generator"
        #         size_hint_y: .1
        GridLayout:
                canvas.before:
                        Color:
                                rgba: 0.019, 0.031, 0.085, 1
                        Rectangle:
                                # self here refers to the widget i.e FloatLayout
                                pos: self.pos
                                size: self.size
                cols: 2
                size_hint_y: .20
                Label:
                        text: 'Talend project root path:'
                        size_hint_x: .5
                TextInput:
                        text: 'D:\Programmation\Preci\sari_lot1-v2.0'
                        id: talend_path
                Label:
                        text: 'Report directory:'
                        size_hint_x: .5
                TextInput:
                        text: 'D:\\'
                        id: report_path
        Button:
                background_normal: ''
                background_down: ''
                background_color: 0.114, 0.29, 0.451,1
                text: 'Generate'
                size_hint_y: .2
                on_press: root._generate(talend_path.text)
                id: generate_button
        TextInput:
                readonly: True
                text: root.line
        Button:
                background_normal: ''
                background_down: ''
                background_color: 0.114, 0.29, 0.451,1
                text: 'Open Report'
                disabled: True
                size_hint_y: .2
                on_press: root._open_report()
                id: open_button
